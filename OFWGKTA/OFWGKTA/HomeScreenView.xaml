        </Ellipse>
        <Ellipse Fill="Red" Margin="0,0,620,460">
            <Ellipse.RenderTransform>
                <TranslateTransform X="{Binding Path=Kinect.ShoulderLeft.X}" Y="{Binding Path=Kinect.ShoulderLeft.Y}" />
