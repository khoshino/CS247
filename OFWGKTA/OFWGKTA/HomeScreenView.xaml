        </Ellipse>
        <Ellipse Fill="Red" Margin="0,0,620,460">
            <Ellipse.RenderTransform>
                <TranslateTransform X="{Binding Path=Kinect.ShoulderRight.X}" Y="{Binding Path=Kinect.ShoulderRight.Y}" />
            </Ellipse.RenderTransform>
        </Ellipse>
        <Ellipse Fill="Red" Margin="0,0,620,460">
            <Ellipse.RenderTransform>
                <TranslateTransform X="{Binding Path=Kinect.AnkleLeft.X}" Y="{Binding Path=Kinect.AnkleLeft.Y}" />
            </Ellipse.RenderTransform>
        </Ellipse>
        <Ellipse Fill="Red" Margin="0,0,620,460">
            <Ellipse.RenderTransform>
                <TranslateTransform X="{Binding Path=Kinect.AnkleRight.X}" Y="{Binding Path=Kinect.AnkleRight.Y}" />
