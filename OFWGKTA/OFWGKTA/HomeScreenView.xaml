<UserControl x:Class="OFWGKTA.SantorumView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="480" Width="640">
    <Grid>
        <Button Content="Back" Height="23" HorizontalAlignment="Left" Margin="142,413,0,0" Name="button1" Command="{Binding GoBackCommand}" VerticalAlignment="Top" Width="75" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="9,413,0,0" Name="textBlock1" Text="{Binding ApplicationMode}" VerticalAlignment="Top" Width="127" />

        <Ellipse Fill="Red" Margin="0,0,620,460">
            <Ellipse.RenderTransform>
                <TranslateTransform X="{Binding Path=Kinect.HandLeft.X}" Y="{Binding Path=Kinect.HandLeft.Y}" />
            </Ellipse.RenderTransform>
        </Ellipse>
        <Ellipse Fill="Red" Margin="0,0,620,460">
            <Ellipse.RenderTransform>
                <TranslateTransform X="{Binding Path=Kinect.HandRight.X}" Y="{Binding Path=Kinect.HandRight.Y}" />
            </Ellipse.RenderTransform>
        </Ellipse>
        <Ellipse Fill="Red" Margin="0,0,620,460">
            <Ellipse.RenderTransform>
                <TranslateTransform X="{Binding Path=Kinect.Head.X}" Y="{Binding Path=Kinect.Head.Y}" />
            </Ellipse.RenderTransform>
        </Ellipse>
        <Ellipse Fill="Red" Margin="0,0,620,460">
            <Ellipse.RenderTransform>
                <TranslateTransform X="{Binding Path=Kinect.ShoulderCenter.X}" Y="{Binding Path=Kinect.ShoulderCenter.Y}" />
