            </Ellipse.RenderTransform>
        </Ellipse>
        <Ellipse Fill="Red" Margin="0,0,620,460">
            <Ellipse.RenderTransform>
                <TranslateTransform X="{Binding Path=Kinect.WristLeft.X}" Y="{Binding Path=Kinect.WristLeft.Y}" />
            </Ellipse.RenderTransform>
        </Ellipse>
        <Ellipse Fill="Red" Margin="0,0,620,460">
            <Ellipse.RenderTransform>
                <TranslateTransform X="{Binding Path=Kinect.WristRight.X}" Y="{Binding Path=Kinect.WristRight.Y}" />
