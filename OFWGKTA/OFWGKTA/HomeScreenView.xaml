<UserControl x:Class="OFWGKTA.SantorumView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="480" Width="640">
    <Grid>

        <ListBox Height="164" ItemsSource="{Binding ConnectedKinects}" SelectedIndex="{Binding SelectedIndex}" HorizontalAlignment="Left" Margin="100,80,0,0" Name="listBox1" VerticalAlignment="Top" Width="139" />
        <Button Content="Back" Height="23" HorizontalAlignment="Left" Margin="400,230,0,0" Name="button1" Command="{Binding GoBackCommand}" VerticalAlignment="Top" Width="75" />
        <TextBlock Height="37" HorizontalAlignment="Left" Margin="372,136,0,0" Name="textBlock1" Text="{Binding ApplicationMode}" VerticalAlignment="Top" Width="127" />

        <Ellipse Width="50" Height="50" Fill="Red" >
            <Ellipse.RenderTransform>
                <TranslateTransform 
                        X="{Binding Path=Kinect.HandRight.X}" 
                        Y="{Binding Path=Kinect.HandRight.Y}"
                        />
            </Ellipse.RenderTransform>
        </Ellipse>
        <TextBlock Height="23" Text="{Binding Path=Kinect.HandLeft.X}" HorizontalAlignment="Left" Margin="285,62,0,0" Name="textBlock2" VerticalAlignment="Top" />
    </Grid>
</UserControl>
