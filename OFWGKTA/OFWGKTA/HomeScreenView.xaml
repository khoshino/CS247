        </Ellipse>
        <Ellipse Fill="Red" Margin="0,0,620,460">
            <Ellipse.RenderTransform>
                <TranslateTransform X="{Binding Path=Kinect.HipCenter.X}" Y="{Binding Path=Kinect.HipCenter.Y}" />
            </Ellipse.RenderTransform>
        </Ellipse>
    </Grid>
